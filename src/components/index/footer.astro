---
import { Icon } from "astro-icon";
import HeroImage from "~/components/index/hero-image.astro";

const links = [
  {
    url: "https://github.com/T2K-Group",
    description: "Github",
    icon: "mdi:github",
  },
  {
    url: "https://www.linkedin.com/company/86805897",
    description: "LinkedIn",
    icon: "mdi:linkedin",
  },
  {
    url: "mailto:admin@clockr.net",
    description: "Contact us",
    icon: "mdi:email",
  },
  {
    url: "#",
    description: "Store - COMING SOON",
    icon: "mdi:shop",
  },

];
---

<footer class="relative flex items-center justify-center h-64">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
